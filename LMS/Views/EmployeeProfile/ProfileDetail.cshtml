@{
    ViewData["Title"] = "Customer List";
}
@model HRMS.Core.Entities.Payroll.EmployeeDetail
<div class="vd_content-wrapper">
    <div class="vd_container">
        <div class="vd_content clearfix">
            <div class="vd_title-section clearfix">
                <div class="vd_panel-header no-subtitle">
                    <h1>@Model.EmployeeName (@Model.EmpCode)</h1>
                </div>
            </div>
            <div class="vd_content-section clearfix">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="panel widget light-widget panel-bd-top">
                            <div class="panel-heading no-title"> </div>
                            <div class="panel-body">
                                <div class="text-center vd_info-parent">
                                    <img alt="example image" src="~/img/avatar/AvtarImage.jpg">
                                </div>

                                <h3 class="font-semibold mgbt-xs-5">@Model.EmployeeName </h3>
                                <hr />
                                <h3 style="text-align:center" class="font-semibold mgbt-xs-5">@Model.EmpCode </h3>

                                <div class="mgtp-20">
                                    <table class="table table-striped table-hover">
                                        <tbody>
                                            <tr>
                                                <td style="width:60%;">Department</td>
                                                <td>@Model.DepartmentName</td>
                                            </tr>
                                            <tr>
                                                <td>Designation</td>
                                                <td>@Model.DesignationName</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <div class="tabs widget">
                            <div class="tab-content">
                                <div id="profile-tab" class="tab-pane active">
                                    <div class="pd-20">
                                        <div class="vd_info tr"> </div>
                                        <h3 class="mgbt-xs-15 mgtp-10 font-semibold"><i class="icon-user mgr-10 profile-icon"></i> ABOUT</h3>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Employee Name:</label>
                                                    <div class="col-xs-7 controls">@Model.EmployeeName</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Employee Code:</label>
                                                    <div class="col-xs-7 controls">@Model.EmpCode</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Department:</label>
                                                    <div class="col-xs-7 controls">@Model.DepartmentName</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Designation:</label>
                                                    <div class="col-xs-7 controls">@Model.DesignationName</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Official Email Id:</label>
                                                    <div class="col-xs-7 controls">@Model.OfficeEmailId</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Personal Email Id:</label>
                                                    <div class="col-xs-7 controls">@Model.PersonalEmailId</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Birthday:</label>
                                                    <div class="col-xs-7 controls">@Model.DateOfBirth?.ToLongDateString()</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Leave Supervisor:</label>
                                                    <div class="col-xs-7 controls">@Model.LeaveSupervisor</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Location:</label>
                                                    <div class="col-xs-7 controls">@Model.Location</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Phone:</label>
                                                    <div class="col-xs-7 controls">@Model.EmergencyNumber</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                        </div>

                                        <hr />
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Pervious Organization:</label>
                                                    <div class="col-xs-7 controls">@Model.PreviousOrganisation</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Total Exprience:</label>
                                                    <div class="col-xs-7 controls">@Model.WorkExprience</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Education:</label>
                                                    <div class="col-xs-7 controls">@Model.EducationalQualification</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Institute Name:</label>
                                                    <div class="col-xs-7 controls">@Model.InstituteName</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Father Name:</label>
                                                    <div class="col-xs-7 controls">@Model.FatherName</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Shift Timming:</label>
                                                    <div class="col-xs-7 controls">@Model.ShiftTiming</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Nationality:</label>
                                                    <div class="col-xs-7 controls">@Model.Nationality</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Leave Supervisor:</label>
                                                    <div class="col-xs-7 controls">@Model.LeaveSupervisor</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Current Address:</label>
                                                    <div class="col-xs-7 controls">@Model.CurrentAddress</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="row mgbt-xs-0">
                                                    <label class="col-xs-5 control-label">Permanent Address:</label>
                                                    <div class="col-xs-7 controls">@Model.PermanentAddress</div>
                                                    <!-- col-sm-10 -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


