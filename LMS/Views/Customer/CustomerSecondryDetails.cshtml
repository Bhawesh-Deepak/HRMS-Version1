@model IEnumerable<HRMS.Core.Entities.LeadManagement.CustomerSecondryDetail>

<table class="table table-striped" id="data-tables">
    <thead>
        <tr>
            <th>#</th>
            <th>Phone #</th>
            <th>Email Id</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i + 1 }))
        {
            <tr>
                <td>@item.Index</td>
                <td>
                    <a asp-action="GetCustomerDetail"
                       asp-route-custId="@item.Data.Id"
                       asp-controller="CustomerDetail">@item.Data.Phone</a>
                </td>
                <td>@item.Data.Email</td>
                <td>
                    <a title="Edit" class="btn vd_btn vd_bg-green btn-xs" onclick="GetSecondryDetail(@item.Data.Id)"><i class='fa fa-pencil'></i></a>
                    <a title="Delete" class="btn vd_btn vd_bg-red btn-xs" onclick="Delete(@item.Data.Id, this)"><i class='fa fa-times'></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>